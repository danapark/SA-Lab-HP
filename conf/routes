# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# People
GET     /people/professor           controllers.PeopleController.professor()
GET     /people/masters             controllers.PeopleController.masters()
GET     /people/phds                controllers.PeopleController.phds()
GET     /people/alumni/:year        controllers.PeopleController.alumni(year: Int)

# Management
GET     /mgmt/people/professor      controllers.PeopleMgmtController.professor()
GET     /mgmt/people/students       controllers.PeopleMgmtController.students()
GET     /mgmt/people/alumni         controllers.PeopleMgmtController.alumni()
GET     /mgmt/people/student/:id    controllers.PeopleMgmtController.studentDetail(id: Long)